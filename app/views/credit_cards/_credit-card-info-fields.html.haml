= image_tag 'https://assets.braintreegateway.com/payment_method_logo/mastercard.png?environment=sandbox&merchant_id=y4ygrg2w6f3gh3tt', :alt => '', :class => "cc-sm"
= image_tag 'https://assets.braintreegateway.com/payment_method_logo/american_express.png?environment=sandbox&merchant_id=y4ygrg2w6f3gh3tt', :alt => '', :class => "cc-sm"
= image_tag 'https://assets.braintreegateway.com/payment_method_logo/discover.png?environment=sandbox&merchant_id=y4ygrg2w6f3gh3tt', :alt => '', :class => "cc-sm"
