%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %div
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %br/
  %b Phone number
  %br/
  = f.fields_for :phone_number_attributes do |p|
    %div
      = p.text_field :country, {:class => "bfh-phone", "data-format" => "dd", :value => "1", :size => 2}
      = p.text_field :area, {:class => "bfh-phone", "data-format" => "ddd", :size => 3, :placeholder => "Area"}
      = p.text_field :number, {:class => "bfh-phone", "data-format" => "ddd-dddd", :size => 8, :placeholder => "Number"}
      = p.text_field :extension, {:class => "bfh-phone", "data-format" => "ddddddd", :size => 7, :placeholder => "Extension"}
  %br/
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  %br/
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div= f.submit "Sign up"
= render "devise/shared/links"
