%header{role: "navigation"}
  .container
    %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %ul.nav.navbar-nav.navbar-left
      %a{href: root_path}
        %img#logo{:src => "/logo.png"}
      #for
        %span for
        %div
          %select.form-control
            - unless current_user && current_user.pickup_point
              %option{value: 0} Find Your Location Below!
            - DeliveryArea.select([:id, :name]).each do |delivery_area|
              %option{selected: current_user && current_user.pickup_point && delivery_area.id == current_user.pickup_point.delivery_area.id, value: delivery_area.id}
                = delivery_area.name
    %ul.nav.navbar-nav.navbar-right
      %li
        %a{ href: "#create-menu", data: {toggle: "modal", target: "#create-menu"} } Create Menu
      %li.divider-vertical
      %li
        %a{href: "#"} About
      %li
        %a{href: "#cart", :id => "cart_link", data: {toggle: "modal", target: "#cart"}, :name => "Cart" }
          %span.glyphicon.glyphicon-shopping-cart
      - if (user_signed_in?)
        - if (current_user.admin?)
          %li
            %li.dropdown
              %a{href: "#", 'data-toggle' => 'dropdown'}
                %span.glyphicon.glyphicon-list
              %ul.dropdown-menu
                %li
                  = link_to 'Orders', orders_path
                %li
                  = link_to 'Users', users_path
                %li
                  = link_to 'Menus', menus_path
                %li
                  = link_to 'Vendors', vendors_path
                %li
                  = link_to 'Items', items_path
                %li
                  = link_to 'Ingredients', ingredients_path
                %li
                  = link_to 'Delivery Areas', delivery_areas_path
                %li
                  = link_to 'Delivery Points', delivery_points_path
        %li.dropdown
          %a{href: "#", 'data-toggle' => 'dropdown'}
            %span.glyphicon.glyphicon-user
          %ul.dropdown-menu
            %li
              = link_to 'Account', account_path
            %li
              = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %li
          =link_to 'Sign Up', new_user_registration_path
        %li
          = link_to 'Login', new_user_session_path
