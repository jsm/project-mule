%h1 Listing items
= paginate @items
%table.table.table-centered
  %tr
    %th Name
    %th Vendor
    %th Price
    %th Description
    %th
    %th
    %th
  - @items.each do |item|
    %tr
      %td= item.name
      %td= item.vendor ? item.vendor.name : ""
      %td= "$ #{item.price}"
      %td= item.description
      %td= link_to 'Show', item, :class =>  "btn btn-info btn-sm"
      %td= link_to 'Edit', edit_item_path(item), :class =>  "btn btn-warning btn-sm"
      %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class =>  "btn btn-danger btn-sm"
= paginate @items
%br/
= link_to 'New Item', new_item_path, :class =>  "btn btn-primary btn-sm"
