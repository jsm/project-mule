<div id="new-ingredient-fields" class="modal fade" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3>Add an Ingredient<%= " to #{ @item.name }" unless @item.name.nil? %></h3>
            </div>
            <div class="modal-body">
                <fieldset>
                <div class="control-group">
                    <%= f.label(:name, :class => "control-label") %>
                    <div class="controls">
                        <%= f.text_field(:name, :class => "input-xlarge field") %>
                    </div>
                </div>
                <%= f.hidden_field(:_destroy, :class => "field") %>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button id="addButton" type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" title="Add this Ingredient to this Item.">Add</button>
                <button id="cancelButton" type="button" class="btn btn-inverse" data-dismiss="modal" aria-hidden="true" title="Close this screen without adding the Ingredient.">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    ingredientFieldsUI.init();
</script>