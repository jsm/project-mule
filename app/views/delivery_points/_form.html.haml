= form_for(@delivery_point) do |f|
  .row
    .col-md-6
      - if @delivery_point.errors.any?
        #error_explanation
          %h2
            = pluralize(@delivery_point.errors.count, "error")
            prohibited this delivery_point from being saved:
          %ul
            - @delivery_point.errors.full_messages.each do |msg|
              %li= msg
      = f.fields_for :address do |a|
        .field
          = a.label :line1
          %br/
          = a.text_field :line1, :class => "form-control"
        .field
          = a.label :line2
          %br/
          = a.text_field :line2, :class => "form-control"
        .field
          = a.label :city
          %br/
          = a.text_field :city, :class => "form-control"
        .field
          = a.label :state
          %br/
          = a.select(:state, Address::STATES, {}, :class => "form-control")
        .field
          = a.label :zip
          %br/
          = a.text_field :zip, :class => "form-control"

      .actions
        = f.submit(:class =>  "btn btn-primary btn-sm")
