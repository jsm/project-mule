= form_for(@delivery_point) do |f|
  - if @delivery_point.errors.any?
    #error_explanation
      %h2
        = pluralize(@delivery_point.errors.count, "error")
        prohibited this delivery_point from being saved:
      %ul
        - @delivery_point.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :customer
    %br/
    = f.text_field :customer
  .field
    = f.label :delivery_area
    %br/
    = f.text_field :delivery_area
  .actions
    = f.submit
