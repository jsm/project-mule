<%= form_for(@delivery_point) do |f| %>
  <% if @delivery_point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@delivery_point.errors.count, "error") %> prohibited this delivery_point from being saved:</h2>

      <ul>
      <% @delivery_point.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :latitude %><br />
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br />
    <%= f.text_field :longitude %>
  </div>

  <div class="field">
    <%= f.label :delivery_area %><br />
    <%= f.text_field :delivery_area %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
