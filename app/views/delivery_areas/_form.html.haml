= form_for(@delivery_area) do |f|
  - if @delivery_area.errors.any?
    #error_explanation
      %h2
        = pluralize(@delivery_area.errors.count, "error")
        prohibited this delivery_area from being saved:
      %ul
        - @delivery_area.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name

  .actions
    = f.submit
