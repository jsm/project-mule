%h1 Listing users
%table.table.table-centered
    %tr
        %th Role
        %th First Name
        %th Last Name
        %th Email
        %th
        %th
        %th
    - @users.each do |user|
        %tr
            %td= User::ROLES_MAPPING[user.role]
            %td= user.first_name
            %td= user.last_name 
            %td= user.email
            %td= link_to 'Show', user
            %td= link_to 'Edit', edit_user_path(user)
            %td= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path

