%table.table.table-centered
  %tr
    %th Item
    %th Price
    %th Quantity
    %th 
    %th
    - if @cart_items
      - @cart_items.each do |item, qty|
        %tr{:id => item.id}
          %td= item.name
          %td.price= "$#{number_with_precision(item.price, :precision => 2)}"
          %td.qty= qty
          %td
            %button.plus.item-qty-buttons{:id => "#{item.id}-item-plus"}+
            %button.minus.item-qty-buttons{:id => "#{item.id}-item-minus"}-
          %td
            %button.item-remove-button{:id => "#{item.id}-item-remove"} Remove
  %tr
    %td 
      %b Subtotal
    %td
    %td
    %td#subtotal= "$#{number_with_precision(@subtotal, :precision =>2)}"
    %td
  %tr
    %td
      %b Tax
    %td
    %td#tax-pct #{@tax}%
    %td#tax-total= "$#{number_with_precision(@tax_total, :precision => 2)}"
    %td
  %tr
    %td
      %b Total
    %td
    %td
    %td#total= "$#{number_with_precision(@total, :precision => 2)}"
    %td