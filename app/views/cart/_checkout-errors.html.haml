- if @credit_card_errors.present? || @user_errors.present? || @duplicate_error || @pickup_point_error || @quantity_error || @item_errors
  #checkout-errors.alert.alert-danger
    - if @credit_card_errors.present?
      %ul
      - @credit_card_errors.each do |error|
        %li
          = error.message
    - if @user_errors.present?
      -  @user_errors.full_messages.each do |msg|
        %li
          = msg
    - if @duplicate_error
      = @duplicate_error
    - if @pickup_point_error
      = @pickup_point_error
    - if @quantity_error
      = @quantity_error
    - if @item_errors
      = @item_errors